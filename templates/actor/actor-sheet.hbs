<form class="{{cssClass}} flexcol" autocomplete="off">

  <!-- Sheet Header -->
  <header
    {{#if (eq actor.type "character" )}} class="sheet-header" {{/if}}
    {{#if (ne actor.type "character" )}} class="sheet-header sheet-min" {{/if}}>
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
    <div class="header-fields">
      <h1 class="charname">
        <input name="name" type="text" value="{{actor.name}}" placeholder="Name" />
      </h1>

      {{#if (eq actor.type "character")}}
      <div class="grid grid-3col">
        <div class="flex-group-center">
          <label for="system.race" class="title-up-label">Race</label>
          <div class="flexrow flex-center flex-between">
            <select name="system.race">
              <option value="">Autre</option>
              {{#select system.race }}
              {{#each races }}
              <option value="{{this.code}}">{{this.name}}</option>
              {{/each}}
              {{/select}}
            </select>
          </div>
        </div>
        <div class="flex-group-center">
          <label for="system.divinity" class="title-up-label">Divinité</label>
          <div class="flexrow flex-center flex-between">
            <select name="system.divinity">
              <option value="">Aucune</option>
              {{#select system.divinity }}
              {{#each divinities }}
              <option value="{{this.code}}">{{this.name}}</option>
              {{/each}}
              {{/select}}
            </select>
          </div>
        </div>
        <div class="flex-group-center">
          <label for="system.level" class="title-up-label">Niveau</label>
          <div class="flexrow flex-center flex-between">
            <input type="text" name="system.level" value="{{system.level}}" data-dtype="Number" />
          </div>
        </div>
      </div>
      {{/if}}
    </div>
  </header>

  <!-- Sheet Tri-Header -->
  {{#if (ne actor.type "pnj")}}
  <div class="sheet-header tri-header">
    <div class="healthLevels grid grid-3col grid-full-width">
      <div class="flex-group-center grid-tiers-1">
        <label for="system.health.value" class="title-up-label">{{system.health.name}}</label>
        <div class="flexrow flex-center">
          <input type="text" name="system.health.value" value="{{system.health.value}}" data-dtype="Number"
            title="Actuels" />
          <span> / </span>
          <input type="text" name="system.health.max" value="{{system.health.max}}" data-dtype="Number" title="Maximum"
            disabled />
        </div>
      </div>
      <div class="flex-group-center grid-tiers-2">
        <label class="title-up-label">État actuel : {{system.health.indic}}</label>
        <div class="flexrow flex-center">
          {{#each system.healthLevels as |healthLevel key|}}
          |
          {{#if (gte healthLevel.max 1)}}
          <input type='checkbox' {{#if (gte healthLevel.value 1)}}checked{{/if}} disabled>
          {{/if}}
          {{#if (gte healthLevel.max 2)}}
          <input type='checkbox' {{#if (gte healthLevel.value 2)}}checked{{/if}} disabled>
          {{/if}}
          {{#if (gte healthLevel.max 3)}}
          <input type='checkbox' {{#if (gte healthLevel.value 3)}}checked{{/if}} disabled>
          {{/if}}
          {{#if (gte healthLevel.max 4)}}
          <input type='checkbox' {{#if (gte healthLevel.value 4)}}checked{{/if}} disabled>
          {{/if}}
          {{#if (gte healthLevel.max 5)}}
          <input type='checkbox' {{#if (gte healthLevel.value 5)}}checked{{/if}} disabled>
          {{/if}}
          {{#if (gte healthLevel.max 6)}}
          <input type='checkbox' {{#if (gte healthLevel.value 6)}}checked{{/if}} disabled>
          {{/if}}
          {{#if (gte healthLevel.max 7)}}
          ...
          {{/if}}
          {{/each}}
          |
        </div>
      </div>
    </div>
  </div>

  <!-- Sheet Mid-Header -->
  <div class="sheet-header mid-header">
    <div class="grid grid-3col grid-full-width">
      {{#each system.caracts as |caract key|}}
      <div class="flexrow flex-group-center">
        <label for="system.caracts.{{key}}.value" class="title-up-label rollable"
          data-caractKey="{{key}}">{{caract.name}}</label>
        <div class="input-value-base">
          <input type="text" name="system.caracts.{{key}}.value" value="{{caract.value}}" data-dtype="Number"
            title="Actuel" />
          <span>(</span>
          <input type="text" name="system.caracts.{{key}}.base" value="{{caract.base}}" data-dtype="Number"
            title="De base" />
          <span>)</span>
        </div>
      </div>
      {{/each}}
      <div class="flexrow flex-group-center">
        <label class="title-up-label">Initiative</label>
        <label>+{{system.init}}</label>
      </div>
    </div>
  </div>
  {{/if}}

  <!-- Sheet Tab Navigation -->
  <nav class="sheet-tabs tabs" data-group="primary">
    {{#if (eq actor.type "character")}}
    <a class="item" data-tab="skills">Compétences</a>
    <a class="item" data-tab="powers">Cristaux</a>
    <a class="item" data-tab="equipments">Équipement</a>
    {{/if}}
    {{#if (eq actor.type "creature")}}
    <a class="item" data-tab="actions">Actions</a>
    {{/if}}
    <a class="item" data-tab="backpack">Objets</a>
    <a class="item" data-tab="description">Description</a>
  </nav>

  <!-- Sheet Body -->
  <section class="sheet-body">

    {{#if (eq actor.type "character")}}
    <!-- Owned Skills Tab -->
    <div class="tab skills height-auto" data-group="primary" data-tab="skills">
      <ol class="items-list">
        <li class="item flexrow item-header">
          <div class="item-name">Avec équipement</div>
          <div class="item-controls combat-roll">
            <img src="{{system.skills.com.img.for}}" width="24" height="24" />Combat (for)
          </div>
          <div class="item-controls combat-roll">
            <img src="{{system.skills.com.img.hab}}" width="24" height="24" />Combat (hab)
          </div>
          <div class="item-controls combat-roll">
            <img src="{{system.skills.com.img.int}}" width="24" height="24" />Combat (int)
          </div>
        </li>
        <li class="item flexrow">
          <div class="item-name">Jets d'Attaque</div>
          <div class="item-controls">
            <a class="item-control rollable" title="Lancé avec Malus" data-caractKey="for" data-skillKey="com"
              data-bonusMalus="-4 + {{actor.bonusAttack}}">
              <i class="fas fa-dice-one"></i></a>
            <a class="item-control rollable" title="Lancé Normal" data-caractKey="for" data-skillKey="com"
              data-bonusMalus="{{actor.bonusAttack}}">
              <i class="fas fa-dice"></i></a>
            <a class="item-control rollable" title="Lancé avec Bonus" data-caractKey="for" data-skillKey="com"
              data-bonusMalus="+4 + {{actor.bonusAttack}}">
              <i class="fas fa-dice-six"></i></a>
          </div>
          <div class="item-controls">
            <a class="item-control rollable" title="Lancé avec Malus" data-caractKey="hab" data-skillKey="com"
              data-bonusMalus="-4 + {{actor.bonusAttack}}">
              <i class="fas fa-dice-one"></i></a>
            <a class="item-control rollable" title="Lancé Normal" data-caractKey="hab" data-skillKey="com"
              data-bonusMalus="{{actor.bonusAttack}}">
              <i class="fas fa-dice"></i></a>
            <a class="item-control rollable" title="Lancé avec Bonus" data-caractKey="hab" data-skillKey="com"
              data-bonusMalus="+4 + {{actor.bonusAttack}}">
              <i class="fas fa-dice-six"></i></a>
          </div>
          <div class="item-controls">
            <a class="item-control rollable" title="Lancé avec Malus" data-caractKey="int" data-skillKey="com"
              data-bonusMalus="-4 + {{actor.bonusAttack}}">
              <i class="fas fa-dice-one"></i></a>
            <a class="item-control rollable" title="Lancé Normal" data-caractKey="int" data-skillKey="com"
              data-bonusMalus="{{actor.bonusAttack}}">
              <i class="fas fa-dice"></i></a>
            <a class="item-control rollable" title="Lancé avec Bonus" data-caractKey="int" data-skillKey="com"
              data-bonusMalus="+4 + {{actor.bonusAttack}}">
              <i class="fas fa-dice-six"></i></a>
          </div>
        </li>
        <li class="item flexrow">
          <div class="item-name">Jets de Défense</div>
          <div class="item-controls">
            <a class="item-control rollable" title="Lancé avec Malus" data-caractKey="for" data-skillKey="com"
              data-bonusMalus="-4 + {{actor.bonusDefence}}">
              <i class="fas fa-dice-one"></i></a>
            <a class="item-control rollable" title="Lancé Normal" data-caractKey="for" data-skillKey="com"
              data-bonusMalus="{{actor.bonusDefence}}">
              <i class="fas fa-dice"></i></a>
            <a class="item-control rollable" title="Lancé avec Bonus" data-caractKey="for" data-skillKey="com"
              data-bonusMalus="+4 + {{actor.bonusDefence}}">
              <i class="fas fa-dice-six"></i></a>
          </div>
          <div class="item-controls">
            <a class="item-control rollable" title="Lancé avec Malus" data-caractKey="hab" data-skillKey="com"
              data-bonusMalus="-4 + {{actor.bonusDefence}}">
              <i class="fas fa-dice-one"></i></a>
            <a class="item-control rollable" title="Lancé Normal" data-caractKey="hab" data-skillKey="com"
              data-bonusMalus="{{actor.bonusDefence}}">
              <i class="fas fa-dice"></i></a>
            <a class="item-control rollable" title="Lancé avec Bonus" data-caractKey="hab" data-skillKey="com"
              data-bonusMalus="+4 + {{actor.bonusDefence}}">
              <i class="fas fa-dice-six"></i></a>
          </div>
          <div class="item-controls">
            <a class="item-control rollable" title="Lancé avec Malus" data-caractKey="int" data-skillKey="com"
              data-bonusMalus="-4 + {{actor.bonusDefence}}">
              <i class="fas fa-dice-one"></i></a>
            <a class="item-control rollable" title="Lancé Normal" data-caractKey="int" data-skillKey="com"
              data-bonusMalus="{{actor.bonusDefence}}">
              <i class="fas fa-dice"></i></a>
            <a class="item-control rollable" title="Lancé avec Bonus" data-caractKey="int" data-skillKey="com"
              data-bonusMalus="+4 + {{actor.bonusDefence}}">
              <i class="fas fa-dice-six"></i></a>
          </div>
        </li>
      </ol>
    </div>
    <div class="tab skills height-auto" data-group="primary" data-tab="skills">
      <ol class="items-list">
        <li class="item flexrow item-header">
          <div class="item-image"></div>
          <div class="item-name">Nom</div>
          <div class="item-value">Valeur</div>
          <div class="item-spec">Spécialité</div>
          <div class="item-controls">Lancés</div>
        </li>

        {{#each system.skills as |skill key|}}
        {{#each skill.caracts as |caract keyCaract|}}
        <li class="item flexrow" data-item-id="{{skill.key}}{{caract}}">
          <div class="item-image">
            <img src="{{lookup skill.img caract}}" width="24" height="24" />
          </div>
          <h4 class="item-name">{{skill.name}} ({{caract}})</h4>
          <div class="item-value">
            {{#if (eq @index 0)}}
            <div class="input-value-base">
              <input type="text" name="system.skills.{{key}}.value" value="{{skill.value}}" data-dtype="Number"
                title="Actuelle" />
              <span>(</span>
              <input type="text" name="system.skills.{{key}}.base" value="{{skill.base}}" data-dtype="Number"
                title="De base" />
              <span>)</span>
            </div>
            {{/if}}
            {{#if (gte @index 1)}}
            <h4 class="item-name">{{skill.value}}</h4>
            {{/if}}
          </div>
          <div class="item-spec">
            {{#if (eq @index 0)}}
            <select name="system.skills.{{key}}.spec">
              <option value=""></option>
              {{#select skill.spec }}
              {{#each skill.specs }}
              <option value="{{this}}">{{this}}</option>
              {{/each}}
              {{/select}}
            </select>
            {{/if}}
            {{#if (gte @index 1)}}
            <h4 class="item-name">{{skill.spec}}</h4>
            {{/if}}
          </div>
          <div class="item-controls">
            <a class="item-control rollable" title="Lancé avec Malus" data-caractKey="{{caract}}"
              data-skillKey="{{key}}" data-bonusMalus="-4">
              <i class="fas fa-dice-one"></i></a>
            <a class="item-control rollable" title="Lancé Normal" data-caractKey="{{caract}}" data-skillKey="{{key}}">
              <i class="fas fa-dice"></i></a>
            <a class="item-control rollable" title="Lancé avec Bonus" data-caractKey="{{caract}}"
              data-skillKey="{{key}}" data-bonusMalus="+4">
              <i class="fas fa-dice-six"></i></a>
          </div>
        </li>
        {{/each}}
        {{/each}}
      </ol>
    </div>

    <!-- Owned Powers Tab -->
    <div class="tab powers" data-group="primary" data-tab="powers">
      <ol class="items-list">
        <li class="item flexrow item-header">
          <div class="item-image"></div>
          <div class="item-name">Nom</div>
          <div class="item-name">Famille</div>
          <div class="item-value">Maitrise</div>
          <div class="item-controls">Lancés</div>
          <div class="item-controls">
            <a class="item-control item-create" title="Ajouter cristal" data-type="power">
              <i class="fas fa-plus"></i>
              Ajouter cristal
            </a>
          </div>
        </li>
        {{#each actor.powers as |power id|}}
        <li class="item flexrow with-drag" data-item-id="{{power._id}}">
          <div class="item-image"><img src="{{power.img}}" width="24" height="24" /></div>
          <h4 class="item-name">{{power.name}}</h4>
          <h4 class="item-name">{{power.data.family}}</h4>
          <!--div class="item-details">
            <i class="fas fa-book-open" title="{{power.data.family}}"></i>
            <i class="fas fa-hourglass-half" title="{{power.data.duration}}"></i>
            <i class="fas fa-bullseye" title="{{power.data.range}}"></i>
          </div-->
          <div class="item-value">
            <div class="input-value-base">
              <input type="text" name="power.data.level" value="{{power.data.level}}" data-dtype="Number" disabled
                title="Actuel" />
              <span>(</span>
              <input type="text" name="power.data.base" value="{{power.data.base}}" data-dtype="Number" disabled
                title="De base" />
              <span>)</span>
            </div>
          </div>
          <div class="item-controls">
            <a class="item-control rollable" title="Lancé avec Malus" data-caractKey="pou"
              data-powerId="{{power._id}}" data-bonusMalus="-4">
              <i class="fas fa-dice-one"></i></a>
            <a class="item-control rollable" title="Lancé Normal" data-caractKey="pou" data-powerId="{{power._id}}">
              <i class="fas fa-dice"></i></a>
            <a class="item-control rollable" title="Lancé avec Bonus" data-caractKey="pou"
              data-powerId="{{power._id}}" data-bonusMalus="+4">
              <i class="fas fa-dice-six"></i></a>
          </div>
          <div class="item-controls">
            <a class="item-control item-edit" title="Modifier cristal"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Supprimer cristal"><i class="fas fa-trash"></i></a>
          </div>
        </li>
        {{/each}}
      </ol>
    </div>

    <!-- Owned Equipments Tab -->
    <div class="tab equipments" data-group="primary" data-tab="equipments">
      <ol class="items-list">
        <li class="item flexrow item-header">
          <div class="item-image"></div>
          <div class="item-name"></div>
          <div class="item-value">Attaque : {{actor.bonusAttack}}</div>
          <div class="item-value">Défense : {{actor.bonusDefence}}</div>
          <div class="item-type">Equipé</div>
          <div class="item-controls"></div>
        </li>
        {{#each actor.equipments as |equipments equipmentType|}}
        <li class="item flexrow item-header">
          <div class="item-name">{{equipmentType}}</div>
          <div class="item-value"></div>
          <div class="item-value"></div>
          <div class="item-type"></div>
          <div class="item-controls">
            <a class="item-control item-create" title="Ajouter {{toLowerCase equipmentType}}" data-type="equipment"
              data-equipment-type="{{equipmentType}}"><i class="fas fa-plus"></i> Ajouter</a>
          </div>
        </li>
        {{#each equipments as |equipment id|}}
        <li class="item flexrow" data-item-id="{{equipment._id}}">
          <div class="item-image"><img src="{{equipment.img}}" title="{{equipment.name}}" width="24" height="24" /></div>
          <h4 class="item-name">{{equipment.name}}</h4>
          <div class="item-value">
            <input type="text" name="equipment.data.attack" value="{{equipment.data.attack}}" data-dtype="Number"
              disabled />
          </div>
          <div class="item-value">
            <input type="text" name="equipment.data.defence" value="{{equipment.data.defence}}" data-dtype="Number"
              disabled />
          </div>
          <div class="item-type">
            <input class="inline-edit-check" type='checkbox' data-field="equipment.data.equipped"
            {{#if equipment.data.equipped}}checked{{/if}}>
          </div>
          <div class="item-controls">
            <a class="item-control item-edit" title="Modifier équipement"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Supprimer équipement"><i class="fas fa-trash"></i></a>
          </div>
        </li>
        {{/each}}
        {{/each}}
      </ol>
    </div>
    {{/if}}

    {{#if (eq actor.type "creature")}}
    <!-- Owned Actions Tab -->
    <div class="tab actions" data-group="primary" data-tab="actions">
      <ol class="items-list">
        <li class="item flexrow item-header">
          <div class="item-image"></div>
          <div class="item-name">Nom</div>
          <div class="item-value">Valeur</div>
          <div class="item-controls">Lancés</div>
        </li>

        {{#each system.skills as |skill key|}}
        {{#each skill.caracts as |caract keyCaract|}}
        <li class="item flexrow" data-item-id="{{skill.key}}{{caract}}">
          <div class="item-image">
            <img src="{{lookup skill.img caract}}" width="24" height="24" />
          </div>
          <h4 class="item-name">{{skill.name}} ({{caract}})</h4>
          <div class="item-value">
            {{#if (eq @index 0)}}
            <input type="text" name="system.skills.{{key}}.value" value="{{skill.value}}" data-dtype="Number" />
            {{/if}}
            {{#if (gte @index 1)}}
            <h4 class="item-name">{{skill.value}}</h4>
            {{/if}}
          </div>
          <div class="item-controls">
            <a class="item-control rollable" title="Lancé avec Malus" data-caractKey="{{caract}}"
              data-skillKey="{{key}}" data-bonusMalus="-4">
              <i class="fas fa-dice-one"></i></a>
            <a class="item-control rollable" title="Lancé Normal" data-caractKey="{{caract}}" data-skillKey="{{key}}">
              <i class="fas fa-dice"></i></a>
            <a class="item-control rollable" title="Lancé avec Bonus" data-caractKey="{{caract}}"
              data-skillKey="{{key}}" data-bonusMalus="+4">
              <i class="fas fa-dice-six"></i></a>
          </div>
        </li>
        {{/each}}
        {{/each}}
      </ol>
      <ol class="items-list">
        <li class="item flexrow item-header">
          <div class="item-image"></div>
          <div class="item-name">Nom</div>
          <div class="item-name">Famille</div>
          <div class="item-value">Maitrise</div>
          <div class="item-controls">Lancés</div>
          <div class="item-controls">
            <a class="item-control item-create" title="Ajouter cristal" data-type="power">
              <i class="fas fa-plus"></i> Ajouter cristal
            </a>
          </div>
        </li>
        {{#each actor.powers as |power id|}}
        <li class="item flexrow" data-item-id="{{power._id}}">
          <div class="item-image"><img src="{{power.img}}" width="24" height="24" /></div>
          <h4 class="item-name">{{power.name}}</h4>
          <h4 class="item-name">{{power.data.family}}</h4>
          <!--div class="item-details">
            <i class="fas fa-book-open" title="{{power.data.family}}"></i>
            <i class="fas fa-hourglass-half" title="{{power.data.duration}}"></i>
            <i class="fas fa-bullseye" title="{{power.data.range}}"></i>
          </div-->
          <div class="item-value">
            <input type="text" name="power.data.level" value="{{power.data.level}}" data-dtype="Number" disabled />
          </div>
          <div class="item-controls">
            <a class="item-control rollable" title="Lancé avec Malus" data-caractKey="pou"
              data-powerId="{{power._id}}" data-bonusMalus="-4">
              <i class="fas fa-dice-one"></i></a>
            <a class="item-control rollable" title="Lancé Normal" data-caractKey="pou" data-powerId="{{power._id}}">
              <i class="fas fa-dice"></i></a>
            <a class="item-control rollable" title="Lancé avec Bonus" data-caractKey="pou"
              data-powerId="{{power._id}}" data-bonusMalus="+4">
              <i class="fas fa-dice-six"></i></a>
          </div>
          <div class="item-controls">
            <a class="item-control item-edit" title="Modifier cristal"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Supprimer cristal"><i class="fas fa-trash"></i></a>
          </div>
        </li>
        {{/each}}
      </ol>
    </div>
    {{/if}}

    <!-- Owned Backpack Tab -->
    <div class="tab backpack" data-group="primary" data-tab="backpack">
      <ol class="items-list">
        <li class="item flexrow item-header">
          <div class="item-image"></div>
          <div class="item-name">Nom</div>
          <div class="item-value">Quantité</div>
          <div class="item-type">Type</div>
          <div class="item-controls">
            <a class="item-control item-create" title="Ajouter objet" data-type="item">
              <i class="fas fa-plus"></i> Ajouter objet
            </a>
          </div>
        </li>
        {{#each actor.backpack as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
          <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24" /></div>
          <h4 class="item-name">{{item.name}}</h4>
          <div class="item-value">
            <input class="inline-edit-value" data-field="item.data.quantity" type="text" value="{{item.data.quantity}}"
              data-dtype="Number" />
          </div>
          <h4 class="item-type">{{item.data.itemType}}</h4>
          <div class="item-controls">
            <a class="item-control item-edit" title="Modifier objet"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Supprimer objet"><i class="fas fa-trash"></i></a>
          </div>
        </li>
        {{/each}}
      </ol>
    </div>

    <!-- Biography Tab -->
    <div class="tab biography" data-group="primary" data-tab="description">
      {{
        editor
        enrichedBiography
